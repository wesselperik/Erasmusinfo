<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Algemeen"
        android:key="mainCategory">
        <ListPreference
            android:title="School"
            android:summary="Kies jouw school zodat je makkelijker kunt navigeren naar jouw roosterwijzigingen"
            android:key="settings_schoolname"
            android:icon="@mipmap/ic_settings_school"
            android:defaultValue="havovwo"
            android:entries="@array/schoolArray"
            android:entryValues="@array/schoolValues" />
        <CheckBoxPreference
            android:title="Laad school bij opstarten"
            android:icon="@mipmap/ic_settings_startup"
            android:defaultValue="false"
            android:summary="Ga direct naar de roosterwijzigingen van jouw school bij het opstarten van de app"
            android:key="settings_startup" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Interface"
        android:key="interfaceCategory">
        <ListPreference
            android:title="Kleuren"
            android:summary="Kies een kleurenpalet om de app aan te passen naar jouw persoonlijke smaak (Deze functie is tijdelijk uitgeschakeld.)"
            android:key="settings_theme"
            android:icon="@mipmap/ic_settings_color"
            android:defaultValue="indigo"
            android:enabled="false"
            android:entries="@array/colorArray"
            android:entryValues="@array/colorValues" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Magister integratie"
        android:key="magisterCategory">
        <EditTextPreference
            android:title="Gebruikersnaam"
            android:summary="Voer hier je Magister gebruikersnaam in"
            android:key="account_username"/>
        <EditTextPreference
            android:title="Wachtwoord"
            android:summary="Voer hier je Magister wachtwoord in"
            android:inputType="textPassword"
            android:key="account_password"/>
        <CheckBoxPreference
            android:title="Simpele weergave"
            android:defaultValue="false"
            android:summary="Geef de volledige naam van de les weer in plaats van de afkorting"
            android:key="magister_simplify" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Over deze app"
        android:key="aboutCategory">
        <Preference
            android:title="Beoordelen"
            android:summary="Gebruik je deze app graag? Een beoordeling in de Play Store zou leuk zijn! Klik hier om naar de Play Store te gaan."
            android:key="info_rate"/>
        <Preference
            android:title="Changelog"
            android:summary="Bekijk de changelog om te zien welke veranderingen er in elke update zijn doorgevoerd."
            android:key="info_changelog"/>
        <Preference
            android:title="App-versie"
            android:summary="v1.5"
            android:key="info_version"
            android:selectable="false"/>
        <Preference
            android:title="Copyright"
            android:summary="Â© 2015 Wessel Perik"
            android:key="info_copyright"
            android:selectable="false"/>
    </PreferenceCategory>
</PreferenceScreen>