<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:fitsSystemWindows="true"
        android:layout_height="@dimen/app_bar_height"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@style/CollapsedAppBarText">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:id="@+id/left_box1"
                        android:layout_weight="0.15">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_about_info"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:id="@+id/right_box1"
                        android:layout_weight="0.85">

                        <TextView
                            android:id="@+id/title_section1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:text="Waarom deze app?"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/text_section1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/title_section1"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="14dp"
                            android:textColor="@color/darkgrey"
                            android:text="Over Erasmusinfo"
                            android:fontFamily="sans-serif-light"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/text_section1"
                            android:background="@color/grey" />


                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:id="@+id/left_box2"
                        android:layout_weight="0.15">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_about_rate"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:id="@+id/right_box2"
                        android:layout_weight="0.85">

                        <TextView
                            android:id="@+id/title_section2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:text="Beoordeel deze app"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/text_section2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/title_section2"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="14dp"
                            android:textColor="@color/darkgrey"
                            android:text="Beoordeel deze app"
                            android:fontFamily="sans-serif-light"/>

                        <Button
                            android:id="@+id/button_section2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_section2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Beoordelen"
                            android:textColor="@color/colorAccent"
                            android:background="?android:attr/selectableItemBackground"
                            android:onClick="goToPlayStore"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_below="@id/button_section2"
                            android:background="@color/grey" />


                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:id="@+id/left_box3"
                        android:layout_weight="0.15">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_about_contributors"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:id="@+id/right_box3"
                        android:layout_weight="0.85">

                        <TextView
                            android:id="@+id/title_section3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:text="Bijdragers"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/text_section3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/title_section3"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="14dp"
                            android:textColor="@color/darkgrey"
                            android:text="Bijdragers"
                            android:fontFamily="sans-serif-light"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/text_section3"
                            android:background="@color/grey" />


                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:id="@+id/left_box4"
                        android:layout_weight="0.15">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_about_contact" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:id="@+id/right_box4"
                        android:layout_weight="0.85">

                        <TextView
                            android:id="@+id/title_section4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:text="Contact"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/text_section4"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/title_section4"
                            android:gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="14dp"
                            android:textColor="@color/darkgrey"
                            android:text="Contact"
                            android:fontFamily="sans-serif-light"/>

                        <Button
                            android:id="@+id/button_section4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_section4"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Stuur een e-mail"
                            android:textColor="@color/colorAccent"
                            android:background="?android:attr/selectableItemBackground"
                            android:onClick="mailDeveloper"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_below="@id/button_section4"
                            android:background="@color/grey" />


                    </RelativeLayout>

                </TableRow>

            </TableLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end"
        android:src="@drawable/ic_fab_contact"
        android:onClick="mailDeveloper"/>

</android.support.design.widget.CoordinatorLayout>